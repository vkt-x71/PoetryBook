@using PoetryBook;
@using PoetryBook.Classes
@{
    ViewBag.Title = "Install";
}

<div style="margin:0px;padding:0px;" class="panel panel-primary">
    <div class="panel-heading">
        <h4>
            @InOp.getUILangTextFor("strInstall")
        </h4>
    </div>
    <div class="panel-body">
        <div class="row info-bar">
            <div class="col-sm-offset-2 col-sm-8">
                <form id="createform" class="form-horizontal">
                    <fieldset>
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="inputEmail">@InOp.getUILangTextFor("strAdminMail") (*)</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="mail" name="mail" type="text" placeholder="@InOp.getUILangTextFor("strMail")" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="inputEmail">Admin @InOp.getUILangTextFor("strNick") (*)</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="nick" name="nick" type="text" placeholder="@InOp.getUILangTextFor("strNick")" required>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="inputPassword">@InOp.getUILangTextFor("strPassword") (*)</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="pass" required name="pass" type="password" placeholder="@InOp.getUILangTextFor("strPassword")">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label" for="inputPassword">@InOp.getUILangTextFor("strPassword") @InOp.getUILangTextFor("strConfirm") (*)</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="pass2" name="pass2" type="password" placeholder="@InOp.getUILangTextFor("strPassword")" required>
                            </div>
                        </div>
                        

                    </fieldset>
                </form>
                <div class="form-group">
                    <div class="col-lg-9 col-lg-offset-3">
                        <button id="btnCompleteInstall" class="btn btn-primary" type="submit">
                            <i class="fa fa fa-check"></i> @InOp.getUILangTextFor("strComplete")
                        </button>
                    </div>
                </div>
                
            </div>
        </div>

    </div>
</div>




